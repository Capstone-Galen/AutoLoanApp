FROM python
RUN mkdir C:\\Capstone
COPY LoanApp.py C:\\Capstone
COPY icons8carbadge.ico C:\\Capstone
RUN python -m pip install --upgrade pip
RUN pip install pyinstaller
RUN pyinstaller --onefile --windowed --icon=icons8carbadge.ico LoanApp.py
FROM mcr.microsoft.com/nanoserver
WORKDIR C:\\Capstone
RUN cd dist
CMD ["start LoanApp.exe"]